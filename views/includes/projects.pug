h2.section-header #[span.line] #[span.section-header-name Projects]	

#projects-container
	each project, index in projects
		-var projectNumber = index + 1
		.project(id = "project-"+ projectNumber)
			// generated by pug
			h5.project-title= project.title
			i.mobile-projects-display-button(class="fa fa-angle-down", aria-hidden="true")
			//- i.tablet-desktop-display-button(class="fa fa-plus-circle", aria-hidden="true")
			.project-details.closed
				.project-images-container
					each image in project.images
						img.mobile-image(src="../images/" + image, alt="")
				.project-description !{project.description}
				ul.keywords
					each keyword in project.keywords
						li= keyword
				a.move-to-top(href="#project-" + projectNumber)
					i(class="fa fa-caret-square-o-up" aria-hidden="true")
